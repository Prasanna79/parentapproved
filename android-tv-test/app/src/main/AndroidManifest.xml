<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidsWatchFeasibility"
        android:banner="@drawable/ic_launcher_background">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".debug.DebugReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.kidswatch.feasibility.NAV" />
                <action android:name="com.kidswatch.feasibility.TEST5_RESOLVE" />
                <action android:name="com.kidswatch.feasibility.TEST6_EXTRACT" />
                <action android:name="com.kidswatch.feasibility.TEST6_PLAY_PROG" />
                <action android:name="com.kidswatch.feasibility.TEST6_PLAY_MERGE" />
                <action android:name="com.kidswatch.feasibility.TEST6_STOP" />
                <action android:name="com.kidswatch.feasibility.CLEAR_LOGS" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
