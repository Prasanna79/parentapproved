<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <receiver
            android:name="tv.parentapproved.app.debug.DebugReceiver"
            android:exported="true">
            <intent-filter>
                <!-- Server/Playlists -->
                <action android:name="tv.parentapproved.app.DEBUG_ADD_PLAYLIST" />
                <action android:name="tv.parentapproved.app.DEBUG_REMOVE_PLAYLIST" />
                <action android:name="tv.parentapproved.app.DEBUG_RESOLVE_PLAYLIST" />
                <action android:name="tv.parentapproved.app.DEBUG_REFRESH_PLAYLISTS" />
                <action android:name="tv.parentapproved.app.DEBUG_GET_PLAYLISTS" />
                <action android:name="tv.parentapproved.app.DEBUG_GET_SERVER_STATUS" />
                <!-- PIN/Auth -->
                <action android:name="tv.parentapproved.app.DEBUG_GET_PIN" />
                <action android:name="tv.parentapproved.app.DEBUG_RESET_PIN" />
                <action android:name="tv.parentapproved.app.DEBUG_SIMULATE_AUTH" />
                <action android:name="tv.parentapproved.app.DEBUG_GET_AUTH_STATE" />
                <!-- Playback -->
                <action android:name="tv.parentapproved.app.DEBUG_PLAY_VIDEO" />
                <action android:name="tv.parentapproved.app.DEBUG_STOP_PLAYBACK" />
                <action android:name="tv.parentapproved.app.DEBUG_GET_NOW_PLAYING" />
                <!-- Relay -->
                <action android:name="tv.parentapproved.app.DEBUG_GET_RELAY_STATUS" />
                <action android:name="tv.parentapproved.app.DEBUG_RESET_TV_SECRET" />
                <!-- Time Limits -->
                <action android:name="tv.parentapproved.app.DEBUG_SET_DAILY_LIMIT" />
                <action android:name="tv.parentapproved.app.DEBUG_CLEAR_DAILY_LIMIT" />
                <action android:name="tv.parentapproved.app.DEBUG_MANUAL_LOCK" />
                <action android:name="tv.parentapproved.app.DEBUG_MANUAL_UNLOCK" />
                <action android:name="tv.parentapproved.app.DEBUG_GRANT_BONUS" />
                <action android:name="tv.parentapproved.app.DEBUG_SET_BEDTIME" />
                <action android:name="tv.parentapproved.app.DEBUG_CLEAR_BEDTIME" />
                <action android:name="tv.parentapproved.app.DEBUG_TIME_STATUS" />
                <!-- Lifecycle -->
                <action android:name="tv.parentapproved.app.DEBUG_FULL_RESET" />
                <action android:name="tv.parentapproved.app.DEBUG_SIMULATE_OFFLINE" />
                <action android:name="tv.parentapproved.app.DEBUG_GET_STATE_DUMP" />
                <action android:name="tv.parentapproved.app.DEBUG_CLEAR_PLAY_EVENTS" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
